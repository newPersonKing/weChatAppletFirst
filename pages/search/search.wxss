/* pages/search/search.wxss */

.search-input {
  background-color: #EEE;
  border-radius: 6rpx;
  font-size: 24rpx;
  min-width: 90%;
  max-width: 90%;
  padding: 10rpx 16rpx;
  margin: 16rpx 0;
}

.result-item {
  display: flex;
  flex-direction: column;
  width: 93%;
  border-bottom: 1rpx solid #EEE;
  padding: 16rpx 0;
}

.title {
  color: #222;
  font-size: 28rpx;
}

.date {
  text-align: end;
  color: #757575;
  font-size: 24rpx;
  margin-top: 16rpx;
}